<Window x:Class="Nalab_IPT101_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medicine Window" Height="350" Width="400"
        Background="RED">
    <StackPanel Margin="10">

        <TextBlock Text="Enter Medicine Name:" Margin="0,10,0,2"/>
        <TextBox x:Name="MedicineNameTextBox" Width="300"/>

        <TextBlock Text="Enter Dosage:" Margin="0,10,0,2"/>
        <TextBox x:Name="DosageTextBox" Width="300"/>

        <Button Content="Save Medicine" Width="150" Margin="0,15,0,10" Click="SaveMedicine_Click"/>

        <TextBlock Text="Medicine List:" Margin="0,10,0,5"/>
        <ListBox x:Name="MedicineListBox" Width="350" Height="150"/>

    </StackPanel>
</Window>
